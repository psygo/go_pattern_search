{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/app/*"
      ],
      "@components/*": [
        "./src/app/lib/components/*"
      ],
      "@config/*": [
        "./src/app/lib/config/*"
      ],
      "@hooks/*": [
        "./src/app/lib/hooks/*"
      ],
      "@middleware/*": [
        "./src/app/lib/middleware/*"
      ],
      "@models/*": [
        "./src/app/lib/models/*"
      ],
      "@utils/*": [
        "./src/app/lib/utils/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}